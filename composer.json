{
    "name": "mathieubretaud/filament-messenger",
    "description": "This is my package filament-messenger",
    "keywords": [
        "MathieuBretaud",
        "laravel",
        "filament-messenger"
    ],
    "homepage": "https://github.com/mathieubretaud/filament-messenger",
    "support": {
        "issues": "https://github.com/mathieubretaud/filament-messenger/issues",
        "source": "https://github.com/mathieubretaud/filament-messenger"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "bretaudmathieu",
            "email": "mathieu.bretau@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^3.0 || ^4.0 || ^5.0",
        "filament/spatie-laravel-media-library-plugin": "^3.3",
        "spatie/laravel-medialibrary": "^11.19",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9 || ^8.0",
        "orchestra/testbench": "^8.0 || ^9.0 || ^10.0",
        "pestphp/pest": "^2.1 || ^3.0",
        "pestphp/pest-plugin-arch": "^2.0 || ^3.0",
        "pestphp/pest-plugin-laravel": "^2.0 || ^3.0"
    },
    "autoload": {
        "psr-4": {
            "MathieuBretaud\\FilamentMessenger\\": "src/",
            "MathieuBretaud\\FilamentMessenger\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MathieuBretaud\\FilamentMessenger\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MathieuBretaud\\FilamentMessenger\\FilamentMessengerServiceProvider"
            ],
            "aliases": {
                "FilamentMessenger": "MathieuBretaud\\FilamentMessenger\\Facades\\FilamentMessenger"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
